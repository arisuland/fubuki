[Unit]
Description = Translation made with simplicity, yet robust.
After=syslog.target
After=network.target

Wants=postgresql.service
After=postgresql.service

[Service]
RestartSec=2s
Type=simple
User=arisu
Group=arisu
WorkingDirectory=/var/lib/arisu
ExecStart=/usr/local/bin/arisu start --config /etc/arisu/config.yml
Restart=always
Environment=USER=arisu HOME=/home/arisu
