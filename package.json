{
  "name": "arisu-root",
  "private": true,
  "workspaces": [
    "github-bot/",
    "typings/",
    "app/",
    "web/"
  ],
  "scripts": {
    "build:ci": "true",
    "prepare": "husky install",
    "format": "prettier --config --parser typescript ./.prettierrc.json --write app/src/**/*.ts singyeong/src/**/*.ts github-bot/src/**/*.ts typings/typings/**/*.d.ts",
    "build": "true",
    "lint": "yarn workspaces foreach --from '{@arisu/arisu,@arisu/github-bot,@arisuland/web}' -p run lint"
  },
  "devDependencies": {
    "husky": "7.0.2",
    "prettier": "2.4.0",
    "vls": "0.7.4"
  }
}
