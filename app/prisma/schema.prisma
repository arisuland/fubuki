datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  description String?
  accessToken AccessTokens?
  updatedAt   DateTime      @updatedAt @map("updated_at")
  createdAt   DateTime      @default(now()) @map("created_at")
  username    String        @unique // users cannot have the same username
  disabled    Boolean       @default(false)
  password    String
  projects    Projects[]
  flags       Int           @default(0)
  email       String
  name        String?
  id          String        @id

  @@map("users")
}

model Projects {
  baseLanguage String             @map("base_language")
  description  String?
  languages    ProjectLanguages[] @relation
  updatedAt    DateTime           @updatedAt
  createdAt    DateTime           @default(now())
  ownerId      String             @map("owner_id")
  owner        Users              @relation(fields: [ownerId], references: [id])
  flags        Int                @default(0)
  name         String
  id           String             @id

  @@map("projects")
}

model AccessTokens {
  ownerId String @unique @map("owner_id")
  owner   Users  @relation(fields: [ownerId], references: [id])
  token   String
  id      String @id

  @@map("access_tokens")
}

model ProjectLanguages {
  completed Int
  project   Projects @relation(references: [id], fields: [projectsId])
  flag      String
  code      String   @unique

  projectsId String
  @@map("project_languages")
}
