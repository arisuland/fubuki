{
  "name": "Arisu",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "extensions": [
    "dbaeumer.vscode-eslint",    // ESLint
    "bradlc.vscode-tailwindcss", // TailwindCSS
    "csstools.postcss"           // PostCSS
  ],
  "forwardPorts": [
    80,    // http
    5432,  // postgres
    2181,  // zookeeper
    9092,  // kafka
    6379,  // redis
    17903, // backend
    28093, // frontend
    29092  // kafka
  ]
}
