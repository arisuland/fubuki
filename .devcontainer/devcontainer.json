{
  "name": "Arisu",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "extensions": [
    "dbaeumer.vscode-eslint",    // ESLint
    "bradlc.vscode-tailwindcss", // TailwindCSS
    "csstools.postcss"           // PostCSS
  ],
  "forwardPorts": [
    80,    // http
    5432,  // postgres
    6379,  // redis
    17093, // frontend
    28093  // backend
  ]
}
